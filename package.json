{
  "name": "check-new-episodes",
  "version": "1.0.0",
  "author": "Ramzan Chasygov <theliketurbo@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.7.5",
    "@babel/node": "7.7.4",
    "@babel/preset-env": "7.7.6",
    "eslint": "6.7.2",
    "eslint-config-get-off-my-lawn": "5.0.1",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-simple-import-sort": "5.0.0",
    "husky": "4.2.3",
    "lint-staged": "10.2.11",
    "nodemon": "2.0.2",
    "prettier": "1.19.1"
  },
  "scripts": {
    "start": "yarn build && node dist",
    "build": "babel src/index.js --out-dir dist",
    "dev": "nodemon --exec babel-node src/index",
    "lint": "eslint . --ext .js,.json --quiet --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "cheerio": "1.0.0-rc.3",
    "request": "2.88.2",
    "request-promise-native": "1.0.8"
  }
}
